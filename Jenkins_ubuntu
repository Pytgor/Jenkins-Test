pipeline {
    agent any

    stages {
        stage('Pull Ubuntu Image') {
            steps {
                script {
                    // Pull the latest Ubuntu image
                    sh 'docker pull ubuntu:latest'
                }
            }
        }

        stage('Run Ubuntu Container') {
            steps {
                script {
                    // Run an Ubuntu container in detached mode
                    sh 'docker run -d --name ubuntu-container ubuntu:latest sleep infinity'
                }
            }
        }

        stage('Configure Container') {
            steps {
                script {
                    // Install updates and additional software inside the container
                    sh '''
                    docker exec ubuntu-container apt-get update
                    docker exec ubuntu-container apt-get install -y curl vim
                    '''
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    // Check running containers
                    sh 'docker ps'
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up containers and images (optional for testing environments)
                echo 'Cleanup step can be added here if needed'
            }
        }
    }
}

